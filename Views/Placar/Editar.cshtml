@model GPC.Models.ViewModels.PlacarViewModel

@{
    ViewData["Title"] = "Editar Placar";
}
<br />
<partial name="../Shared/_StatusMessage" />
<h2>@(ViewData["Title"])</h2>

<style>
    a:hover{
        text-decoration: none;
    }
</style>

<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Placar.Id" />
            <select class="selectpicker" title="Jogador" id="selectJogador" name="Placar.IdJogador"
            asp-for="Placar.IdJogador" data-live-search="true" data-style="btn-primary" data-width="100%">
                <option style="background-color: #2c3e50; text-align: center;" disabled="true">Jogador</option>
                @foreach(var jogador in Model.Jogadores){
                    <option value="@jogador.Id">@(jogador.Nome)</option>
                }
            </select>
            <span asp-validation-for="Placar.Jogador.Id" class="text-danger"></span>
            <div class="form-group" style="margin-top: 20px;">
                <label asp-for="Placar.Pontos" class="control-label">Pontos <span class="text-danger">*</span></label>
                <input asp-for="Placar.Pontos" type="text" maxlength="6" onkeypress='return event.charCode >= 48 && event.charCode <= 57' 
                Title="Edite aqui os pontos do placar" class="form-control" />
                <span asp-validation-for="Placar.Pontos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Placar.Data" class="control-label">Data <span class="text-danger">*</span></label>
                <input asp-for="Placar.Data" Title="Edite aqui a data do placar" class="form-control"/>
                <span asp-validation-for="Placar.Data" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" Title="Salvar dados do placar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 15px;">
    <a asp-action="Index" style="color: #e74c3c; display: flex; align-items: center;" class="text-danger">
        <i class="fas fa-arrow-left fa-2x" style="margin: 0px 10px 0px 0px;"></i>
        <p style="margin: 0px;" title="Voltar à lista de placares">Voltar à lista</p>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
