@model GPC.Models.ViewModels.JogadorViewModel

@{
    ViewData["Title"] = "Editar Jogador(a)";
}
<br />
<partial name="../Shared/_StatusMessage" />
<h2>@(ViewData["Title"])</h2>

<style>
    a:hover{
        text-decoration: none;
    }
</style>

<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NomeAntigo" name="NomeAntigo"/>
            <input type="hidden" asp-for="Jogador.Id" />
            <div class="form-group">
                <label asp-for="Jogador.Nome" class="control-label">Nome <span class="text-danger">*</span></label>
                <input asp-for="Jogador.Nome" Title="Edite aqui a nome do(a) jogador(a)" type="text" minlength="3" maxlength="40" class="form-control" />
                <span asp-validation-for="Jogador.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jogador.Idade" class="control-label">Idade <span class="text-danger">*</span></label>
                <input asp-for="Jogador.Idade" type="text" maxlength="2" onkeypress='return event.charCode >= 48 && event.charCode <= 57' 
                Title="Edite aqui a idade do(a) jogador(a)" class="form-control" />
                <span asp-validation-for="Jogador.Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Jogador.Nacionalidade" class="control-label"></label>
                <input asp-for="Jogador.Nacionalidade" Title="Edite aqui a nacionalidade do(a) jogador(a)" class="form-control"/>
                <span asp-validation-for="Jogador.Nacionalidade" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" Title="Salvar dados do(a) jogador(a)" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 15px;">
    <a asp-action="Index" style="color: #e74c3c; display: flex; align-items: center;" class="text-danger">
        <i class="fas fa-arrow-left fa-2x" style="margin: 0px 10px 0px 0px;"></i>
        <p style="margin: 0px;" title="Voltar à lista de jogadores(as)">Voltar à lista</p>
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
