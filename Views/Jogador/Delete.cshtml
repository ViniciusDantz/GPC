@model GPC.Models.Jogador

@{
    ViewData["Title"] = "Remover Jogador(a)";
}

<style>
    a:hover{
        text-decoration: none;
    }
</style>

<h2>@(ViewData["Title"])</h2>

<h3>Tem certeza que deseja remover este(a) jogador(a)?</h3>

<div>
    <h4>Jogador(a)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nacionalidade)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nacionalidade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Nome" />
        <input type="submit" value="Remover" title="Remover dados do(a) jogador(a)" class="btn btn-primary" />
        <div style="margin-top: 15px;">
            <a asp-action="Index" style="color: #e74c3c; display: flex; align-items: center;" class="text-danger">
                <i class="fas fa-arrow-left fa-2x" style="margin: 0px 10px 0px 0px;"></i>
                <p style="margin: 0px;" title="Voltar à lista de jogadores(as)">Voltar à lista</p>
            </a>
        </div>
    </form>
</div>
